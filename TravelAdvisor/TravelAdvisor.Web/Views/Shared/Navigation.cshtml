<div class="container">
	<div class="navbar-header">
		<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
		</button>
		<a class="nav navbar-brand">
			<img src="~/Images/logo.png" class="logo" height="30" width="30"/>
			@Html.ActionLink("Travel Advisor", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
		</a>
	</div>
	<div class="navbar-collapse collapse navbar-right">
		<div class="navbar-collapse collapse">
			<ul class="nav navbar-nav">
				<li>@Html.ActionLink("Home", "Index", "Home")</li>
				<li>@Html.ActionLink("Sevices", "", "")</li>
				<li>@Html.ActionLink("Destinations", "", "")</li>
				<li>@Html.ActionLink("Testimonials", "", "")</li>

				@if (Request.IsAuthenticated)
				{
					<li class="dropdown-toggle">
						@Html.ActionLink("Tours", "", "")
						<ul class="dropdown-menu">
							<li>@Html.ActionLink("Cruises", "Index", "Home")</li>
							<li>@Html.ActionLink("Trips", "Index", "Home")</li>
						</ul>
					</li>
					<li class="dropdown-toggle">
						@Html.ActionLink("Booking", "", "")
						<ul class="dropdown-menu">
							<li>@Html.ActionLink("Rent a car", "", "")</li>
							<li>@Html.ActionLink("Flights", "", "")</li>
						</ul>
					</li>
				}

				@if (User.IsInRole("Admin"))
				{
					<li>@Html.ActionLink("Administration", "", "")</li>
				}
			</ul>
			@Html.Partial("_LoginPartial")
		</div>
	</div>
</div>