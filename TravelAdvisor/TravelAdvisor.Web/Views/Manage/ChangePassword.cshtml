@model TravelAdvisor.Web.Models.Manage.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

@section styles {
	@Styles.Render("~/Content/register")
}

<section id="changePassword" class="col-md-4">
	@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
	{
		@Html.AntiForgeryToken()
		<div class="form-box col-md-12">
			<div class="form-top">
				<div class="form-top-left">
					<h3 class="text-center">Change password</h3>
				</div>
			</div>
			<div class="form-bottom">
				<div class="form-group">
					<div class="col-md-12">
						@Html.LabelFor(m => m.OldPassword, new { @class = "control-label" })
						@Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-12">
						@Html.LabelFor(m => m.NewPassword, new { @class = "control-label" })
						@Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-12">
						@Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
						@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-offset-1 col-md-10">
						<input type="submit" value="Change password" class="btn btn-change" />
					</div>
				</div>
			</div>
		</div>

	}
</section>
@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
