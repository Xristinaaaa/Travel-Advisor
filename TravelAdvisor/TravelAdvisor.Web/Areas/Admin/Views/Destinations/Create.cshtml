@model TravelAdvisor.Web.Models.Destinations.DestinationViewModel
@{
	ViewBag.Title = "Create destination";
}

@section styles {
	@Styles.Render("~/Content/Admin/Views/common.css")
}

<section id="createDescription" class="col-md-4">
	@using (Html.BeginForm("Create", "Destinations", FormMethod.Post, new { role = "form", enctype = "multipart/form-data" }))
	{
		@Html.AntiForgeryToken()
		<div class="form-box col-md-12">
			<div class="form-top">
				<div class="form-top-left">
					<h3>Create Destination</h3>
				</div>
			</div>
			<div class="form-bottom">
				<div class="form-group">
					<div class="col-md-12">
						@Html.LabelFor(model => model.Country, htmlAttributes: new { @class = "control-label" })
						@Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "form-control" } })
						@Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-12">
						@Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label" })
						@Html.TextAreaFor(model => model.Description, 2, 45, new { htmlAttributes = new { @class = "form-control" } })
						@Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-12">
						@Html.LabelFor(model => model.ImageUrl, htmlAttributes: new { @class = "control-label" })
						@Html.EditorFor(model => model.ImageUrl, new { htmlAttributes = new { @class = "form-control" } })
					</div>
					<div class="col-md-12">
						@Html.Label("Or", new { @class = "control-label" }) 
						@Html.TextBoxFor(m => m.Image, new { type = "file" })
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-12">
						<input type="submit" value="Create" class="btn btn-create" />
					</div>
				</div>
			</div>
		</div>
	}
</section>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}